<form class="edit-form" onsubmit={{action "submitForm"}}>
    <div class="form-group row">
        <label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
        <div class="col-sm-10">
            {{input type="text" value=lastName class="form-control form-control-lg" id="inputSurname" placeholder="Введите фамилию"}}
            {{#if inputErrors}}
                {{#if (v-get this 'lastName' 'isInvalid')}}
                <span class="text-danger">
                    {{v-get this 'lastName' 'message'}}
                </span>
                {{/if}}
            {{/if}}
            
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
        <div class="col-sm-10">
            {{input type="text" value=firstName class="form-control form-control-lg" id="inputName" placeholder="Введите имя"}}
            {{#if inputErrors}}
                {{#if (v-get this 'firstName' 'isInvalid')}}
                <span class="text-danger">
                    {{v-get this 'firstName' 'message'}}
                </span>
                {{/if}}
            {{/if}}   
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
        <div class="col-sm-10">
            {{input type="text" value=middleName class="form-control form-control-lg" id="inputPatronymic" placeholder="Введите отчество"}}
            {{#if inputErrors}}
                {{#if (v-get this 'middleName' 'isInvalid')}}
                <span class="text-danger">
                    {{v-get this 'middleName' 'message'}}
                </span>
                {{/if}}
            {{/if}}
            
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
            {{#link-to "speakers" tagName="button" type="submit" class="btn btn-outline-secondary btn-lg"}}
                Отмена
            {{/link-to}}
        </div>
    </div>
</form>