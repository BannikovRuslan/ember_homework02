<div class="htop">
    {{edit-book-header title=model.title modelID=model.id}}
    <form class="edit-form" onsubmit={{action "saveBook"}}>
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label text-right">Название {{model.id}}</label>
            <div class="col-sm-10">
                {{input type="text" placeholder="Полное название книги" value=model.title class="form-control form-control-lg" id="inputTitle"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputAuthor" class="col-sm-2 col-form-label text-right">Автор</label>
            <div class="col-sm-10">
                {{input type="text" placeholder="Фамилия И.О. автора" value=model.author class="form-control form-control-lg" id="inputAuthor"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">Объем</label>
            <div class="col-sm-10">
                {{input type="number" placeholder="Количество страниц книги" value=model.pages class="form-control form-control-lg" id="inputPagesCount"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">Описание</label>
            <div class="col-sm-10">
                {{input type="url" placeholder="Ссылка на сайт с описанием книги" value=model.description class="form-control form-control-lg" id="inputDescriptionURL"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="customFile" class="col-sm-2 col-form-label text-right">Обложка</label>
            {{input-file oldFileName=(get-local-file-name model.cover) class="input-group input-group-lg col-sm-10" uploadData=uploadData uploadDataChanged=(action "changeUploadData")}}
        </div>

        <div class="form-group row">
            <label for="inputTags" class="col-sm-2 col-form-label text-right">Теги</label>
            <div class="col-sm-10">
                <!-- <input type="text" class="form-control" id="inputPatronymic" placeholder="#Теги через запятую"> -->
                {{input-tags tags=model.tags onChange=(action "changeTags")}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 text-right">
                <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
                {{#link-to "books" tagName="button" type="submit" class="btn btn-outline-secondary btn-lg"}}
                Отмена
                {{/link-to}}
            </div>
        </div>
    </form>
</div>